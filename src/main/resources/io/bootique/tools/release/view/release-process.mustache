{{> header}}

<div id="{{releaseId}}">
    <div class="row" style="text-align:center;">
        <div class="col-sm-1"></div>
        <div v-for="statusItem in statusBar" class="col-sm-2">
            <p>[[statusItem.name]]<br>
                <span v-bind:style="{color:statusItem.color}">[[statusItem.msg]]</span></p>
        </div>
    </div>

    <div>
        <h1>[[stageName]]</h1>
    </div>

    {{> release-step}}


    <div class="buttons-block">
        <a href="/ui/release/next" style="display:{{finishStep}};">
            <button type="submit" class="btn btn-sm btn-outline-primary" v-bind:disabled="showButton">Next Step</button>
        </a>
        <button type="submit" id="btn-confirm" class="btn btn-sm btn-outline-primary" v-bind:disabled="showButton" style="display:{{finishStep}};">Rollback release</button>
    </div>
</div>


<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="confirm-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-content">
                <p style="padding:10px; font-weight:500;">
                    Do yo want to rollback the release?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <a href="/ui/rollback/start" style="display:{{finishStep}};">
                    <button type="button" class="btn btn-success" id="modal-btn-yes">Confirm</button>
                </a>
            </div>
        </div>
    </div>
</div>


<script type="module">
    initReleaseProcess('{{releaseId}}');
</script>
{{> footer}}