{{> header}}

<div class="release-fields" id="continueReleaseVue">
    <div class="container">
        <div class="row">
            <div class="col-sm-12" style="text-align:center;">
                <h1>Continue your previous release</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <th>Version</th>
                        <th>Last success state</th>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{releaseVersion}}</td>
                            <td>{{currentStage}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <th>Modules in Release</th>
                        </thead>
                        <tbody>
                         {{#projectList}}
                        <tr>
                            <td>{{repository.name}}</td>
                        </tr>
                        {{/projectList}}
                        </tbody>
                    </table>
                </div>
            </div>


            <div class="buttons-block">
                <div class="col-sm-12">
                    <div class="text-center release-btn">
                        <button type="submit" id="btn-confirm" data-target="#confirm-modal" class="btn btn-sm btn-outline-primary">Continue</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="confirm-modal">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4>Ready to continue release?</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-content">
                        <p>
                            Release version: <strong>{{releaseVersion}}</strong><br>
                            Modules to release: <br>
                            <ul style="text-align:left;">
                                 {{#projectList}}
                                 <li>{{repository.name}}</li>
                                 {{/projectList}}
                            </ul>
                            <br>
                            <strong>Be sure you have access to push commits to repositories.</strong>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                        <a href="/ui/release/next">
                            <button type="button" class="btn btn-default" type="submit">Confirm</button>
                        </a>
                    </div>
                </div>
            </div>
    </div>
</div>
{{> footer}}